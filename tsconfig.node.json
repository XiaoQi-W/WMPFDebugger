{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "moduleResolution": "Node",
    "outDir": "dist/main",
    "rootDir": "electron",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["node_modules"]
}
